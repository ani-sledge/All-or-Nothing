    margin: -1px 15px 0 0;
    vertical-align: middle;
    background: $gold;
    border: 2px solid $gold;
    border-radius: $radius;
    cursor: pointer;
}
input[type="checkbox"]:checked + label:before {
    background: $gold url(assets/check2.png) left 2px no-repeat;
}